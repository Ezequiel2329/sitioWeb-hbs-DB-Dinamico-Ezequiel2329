{{> header}}
{{> navbar}}
<div class="container">
    <p id="titulo">(Pintores Favoritos)</p>

    {{#if pintores}}
    <table class="table table-dark">
        <thead>
            <tr>
                <td>ID</td>
                <td>Nombre</td>
                <td>Nacionalidad</td>
                <td>Corriente</td>
                <td>Imagen</td>
            </tr>
        </thead>

        <tbody>
        {{#each pintores}}
            <tr>
                <td>{{_id}}</td>
                <td>{{nombre}}</td>
                <td>{{nacionalidad}}</td>
                <td>{{corriente}}</td>
                <td><img src="../images/{{pintura}}" alt=""></td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    {{else}}
    <div><p>No se encontraron pintores :c</p></div>
    {{/if}}
</div>
<script src="scripts/script.js"></script>

{{> footer}}